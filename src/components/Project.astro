---
interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
  badges: string[];
  link: string;
}

const { image, title, description, badges, link } = Astro.props;

import { Image } from "astro:assets";
import Badge from "./Badge.astro";
---

<a href={link} target="_blank">
  <div
    class="flex flex-row gap-5 items-center cursor-pointer rounded-lg py-2 hover:bg-[#5B19B7] px-4"
  >
    <div class="flex-shrink-0">
      <Image src={image} alt={`Logo for ${title}`} class="w-8" />
    </div>

    <div class="flex flex-col gap-2 grow">
      <div>
        <h2 class="text-lg font-bold mono">{title}</h2>
        <span>{description}</span>
      </div>

      <div class="block *:m-[0.25rem] m-[-0.25rem] text-2xl">
        {badges.map((t) => <Badge name={t} hoverEffect={false} />)}
      </div>
    </div>
  </div>
</a>
